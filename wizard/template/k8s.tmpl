{{if .ui}} 
apiVersion: apps/v1
kind: Deployment
metadata:
  name:  bee-ui
  labels:
    run:  bee-ui
    version: v1
spec:
  replicas: 1
  selector:
    matchLabels:
      run:  bee-ui
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      labels:
        run:  bee-ui
    spec:
      containers:
      - image: {{ .ui.image }}/{{ .ui.tag }}
        imagePullPolicy: Always
        name:  bee-ui
        env:
          - name: PORT
            value: "9000"
          - name: DESTINATION_URL
            value: http://destination
          - name: HOTEL_URL
            value: http://hotel
          - name: CURRENCY_EXCHANGE_URL
            value: http://currencyexchange
        resources:
          limits:
            cpu: 200m
            memory: 256Mi
          requests:
            cpu: 200m
            memory: 256Mi
      restartPolicy: Always

---
kind: Service
apiVersion: v1
metadata:
  name:  bee-ui
  labels:
    run: bee-ui
spec:
  selector:
    run:  bee-ui
  type:  NodePort
  ports:
  - port: 80
    protocol: TCP
    targetPort:  9000
{{- end}}
